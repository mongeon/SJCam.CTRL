<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SJCamCTRL.Styles">

    <Style TargetType="TextBlock" x:Key="BaseTextBlock" >
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}" >
    </Style>
    <Style TargetType="TextBlock"  BasedOn="{StaticResource BaseTextBlock}" x:Key="Label"  >
        <Setter Property="FontWeight" Value="Bold"/>
        
    </Style>
</ResourceDictionary>
